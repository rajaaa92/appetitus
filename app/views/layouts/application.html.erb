<!DOCTYPE html lang="en">
<html>
  <head>
    <title>Appetitus!</title>
    <%= stylesheet_link_tag 'bootstrap' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="container">
			<div class="navbar">
  			<div class="navbar-inner">
    			<div class="container">
    				<a class="brand" href="/">
							Appetitus!
						</a>
						<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      				<span class="icon-bar">
								<ul class="nav">
									<li class="active">
										<%= link_to 'Create an account', 'users#new' %>
									</li>
								</ul>
							</span>
    				</a>
						
    			</div>
  			</div>
			</div>
			<div class="hero-unit">
			<div id="myCarousel" class="carousel slide">
  			<!-- Carousel items -->
  			<div class="carousel-inner">
    			<div class="active item">
						<img src="/assets/navbar1.png" />
					</div>
			    <div class="item">
						<img src="/assets/navbar2.png" />
					</div>
			    
  			</div>
  			<!-- Carousel nav -->
  			<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;

				</a>
			  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;

				</a>
			</div>
			</div>


				<% if flash[:notice] %>
					<div id="notice">
						<%= flash[:notice] %> 
					</div>
				<% end %>
				Use 1 as user please, im working on it ;)
        <%= yield %>

    </div>
  </body>
</html>
