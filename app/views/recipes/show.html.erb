<h2> <%=h @recipe.name %> </h2> 

<hr>

<h3> <b> Ingredients: </b>  </h3> <br>
<%=h simple_format(@recipe.ingredients) %>
<br>
<h3> <b> Content: </b> </h3> <br>
<%=h simple_format(@recipe.content) %>

<hr>

<div class="row">
	<div class="span1">
		<b> Added by: </b>
		<b> Likes: </b>
		<%=h @recipe.rate %>
	</div>
	<% u = User.find(@recipe.user_id).email %>
	<% u =  u[/(.*@)/] %>
	<div class="span1">
		<%=h  u.chop %>
		<%= link_to 'Like it!', {:action => :like_it, :id => @recipe.id, :remote => true}, {:class=>'btn btn-primary'} %>
		
	</div>
	<div class="span1">
		<%= link_to 'Add to my cookbook', new_cookbook_path(:recipe_id => @recipe.id), :class => "btn btn-primary" %>
	</div>
</div>

<br>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>

<hr>  

<% if @recipe.comments == [] %>
	<h4> No comments </h4>
<% else %>
	<h4> Comments </h4> 
<% end %>

<br>

<% @recipe.comments.each do |c| %>
	<table class="table">          
		<thead>
			<tr>
				<div class="well">
		 			<b> Comment written</b>
		   		<i> <%= time_ago_in_words(c.created_at) %> ago </i>
						by <% t = User.find(c.user_id).email %>
								<% t = t[/(.*@)/] %>
								<%=h  t.chop %>: <br>
						<%=h c.content %>
				</div>
			</tr>
		</thead>
	</table>
<% end %>

<hr>

<%= form_for([@recipe, @recipe.comments.build]) do |f| %>
    Add your comment...<br />
	  <div class="field">
		  <%= f.text_area :content %>
		</div>
		
  <p>
    <%= f.submit "Add Comment" %>
  </p>
<% end %>




