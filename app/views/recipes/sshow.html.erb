<div class="hero-unit">
  <h2> <%=h @recipe.name %> </h2> <br>
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span7">
          <div class="hero-unit">
            <p>
	      <b>Ingredients:</b> <br>
	      <%=h simple_format(@recipe.ingredients) %>
            </p>
            <p>
	      <b>Content:</b> <br>
	      <%=h @recipe.content %>
            </p>
          </div>
          <p>
						<b>Added by:</b>
						<%=h @recipe.user_id.name %>
						<br>
						<b>Rate:</b>
						<%=h @recipe.rate %>
				 </p>
				 <br>
          <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
          <%= link_to 'Destroy', @recipe, :confirm => 
	    'Are you sure?', :method => :delete %> |
          <%= link_to 'Back', recipes_path %>
       
          <hr>


          
        </div>
      </div>
    </div>
  </div>
</div>


